---
import {Icon} from "astro-icon/components";

const socialMediaLinks = [
    {url: "https://facebook.com/TwizmoGames", icon: "fa7-brands:facebook"},
    {url: "https://instagram.com", icon: "fa7-brands:instagram"},
    {url: "https://x.com/TwizmoGames", icon: "fa7-brands:x-twitter"},
];

const currentYear = new Date().getFullYear();
const {class: className, ...rest} = Astro.props;
---


<div class:list={className} {...rest}>
    <div class="flex flex-col items-center gap-4 md:flex-row md:justify-between ">
        <div class="flex gap-2">
            {socialMediaLinks.map(link => (
                    <a class="hover:text-secondary transition-colors" href={link.url}>
                        <Icon size="24" name={link.icon}/>
                    </a>
            ))}
        </div>
        <span>&copy; {currentYear} Twizmo! Games. All rights reserved.</span>
    </div>
</div>