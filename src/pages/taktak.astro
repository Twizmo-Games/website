---
import Layout from "@/layouts/Layout.astro";
import {Image} from "astro:assets"

import tak_tak_intro from "@/assets/images/tak-tak-intro.png"
import tak_tak from "@/assets/images/tak-tak-instructions.png"
---


<Layout title="tak&bullet;tak">
    <div class="flex flex-col items-center gap-12">
        <Image id="image" src={tak_tak_intro} alt="tak&middot;tak intro" width="1920"/>
        <Image id="image" src={tak_tak} alt="tak&middot;tak directions" width="1920"/>
    </div>
</Layout>

<script>
    import gsap from "gsap";

    const image = document.getElementById("image");

    image?.addEventListener("load", function () {
        gsap.from(image, {opacity: 0.0, duration: 1})
    })
</script>